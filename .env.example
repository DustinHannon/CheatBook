# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES=7d

# Email Configuration
# For development, set EMAIL_CONSOLE=true to log emails to console
EMAIL_CONSOLE=true

# For production email service
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@cheatbook.app

# App Information
APP_NAME=CheatBook